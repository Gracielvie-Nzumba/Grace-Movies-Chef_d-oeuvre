generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  Id_user    Int     @id @default(autoincrement())
  Name       String
  Postname   String
  e_mail     String  @unique
  Password   String
  Date_de_naissance  DateTime 
  Sexe       String
  Pays       String
}

model Role {
  id     Int     @id @default(autoincrement())
  nom    String  @unique
  description  String
}

